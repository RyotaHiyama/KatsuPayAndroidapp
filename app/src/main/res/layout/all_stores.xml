<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.AllStores">

    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline4"
            app:layout_constraintGuide_percent="0.15"/>

    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline3"
            app:layout_constraintGuide_percent="0.05"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="@string/店舗一覧"
            android:textSize="25sp"
            android:background="#CDDC39"
            android:gravity="center"
            android:textStyle="bold"
            android:backgroundTint="#CDDC39"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/guideline3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/guideline4"
            android:id="@+id/textView11" />
    <Button
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:text="@string/PurchaseReturnButton"
            android:textSize="20sp"
            android:backgroundTint="#8BC34A"
            android:id="@+id/AllStoresReturnButton"
            android:layout_marginStart="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/guideline3"
            app:layout_constraintRight_toRightOf="@id/guideline4"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="35dp"
            android:id="@+id/storescroll">


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>