<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="広島市立大学"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:gravity="center"
                    android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

            <TextView
                    android:text="情報科学部 情報工学科"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="コンピュータアーキテクチャ研究室"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="25sp"></LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="レビュー：https://forms.office.com/Pages/ResponsePage.aspx?id=zXUxeK0Ap0-hsC_qcNSkmeUzABHEqEBGlY-XkO7uEqFUOE1LQVpMSVRMM0xDSlYwSVRNVlROTzdCUC4u"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:autoLink="web" />
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="25sp"></LinearLayout>

        <Button
                android:text="@string/戻る"
                android:layout_width="150sp"
                android:layout_height="70sp"
                android:id="@+id/returnBt"
                android:textSize="25sp"
                android:textStyle="bold"
                android:backgroundTint="#E8F5E9" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>