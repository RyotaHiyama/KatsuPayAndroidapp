<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="35dp">
        <Button
                android:text="@string/RIReturnButton"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:id="@+id/RIReturnButton"
                android:textSize="20sp"
                android:backgroundTint="#03A9F4"
                android:background="#03A9F4"/>
        <TextView
                android:text="@string/RITitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/textView7"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#2F03A9F4"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30sp">
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="@string/ユーザ名"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp" android:background="#331E88E5"/>
        <TextView
                android:layout_width="match_parent"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:id="@+id/userName" android:background="#1A039BE5"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="@string/MailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:background="#331E88E5"/>
        <TextView
                android:layout_width="match_parent"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:id="@+id/mailAddress"
                android:background="#1A1E88E5"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="●誕生日"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:textSize="20sp"
                android:background="#331E88E5"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/birthday"
                android:textSize="20sp"
                android:background="#1A1E88E5"/>
    </LinearLayout>
</LinearLayout>