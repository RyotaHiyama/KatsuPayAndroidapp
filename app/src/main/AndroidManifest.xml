<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        package="com.sample.katsupay">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher_version2_foreground"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:usesCleartextTraffic="true">
        <activity android:name=".activity.AllStores"></activity>
        <activity android:name=".activity.StoreStock" />
        <activity android:name=".activity.SignIn">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.PurchaseHistory" />
        <activity android:name=".activity.RegistrationInformation" />
        <activity android:name=".activity.SignUp" />
        <activity android:name=".activity.Reconnect" />
        <activity
                android:name=".activity.ScanQRCode"
                android:screenOrientation="portrait"
                android:stateNotNeeded="true"
                android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".activity.ContactUs" />
        <activity
                android:name=".activity.StoreStock"
                tools:ignore="DuplicateActivity" />
        <activity android:name=".activity.AllStores"
                tools:ignore="DuplicateActivity" />
    </application>

</manifest>